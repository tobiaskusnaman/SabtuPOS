<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <style>
      .container{
        width: 100%;
        display: inline-flex;
      }

      .half_left{
        display: inline-flex;
        float: left;
        width:70%%;
        height:1000px;
        border: 1px solid;
      }
      .half_right{
        display: inline-block;
        float: left;
        width:30%%;
        height:1000px;
        border: 1px solid;
      }
    </style>

    <div class="container">
      <div class="half_left">
        <% data.forEach(row =>{ %>

          <form action="/order/<%=row.id%>/invoices/<%=invoice[0].id%>" method="POST">
            <input type="image" name="itemId" src="<%= row.imgSource %>" width="200" height="200" value="<%= row.id %>" />
          </form>

        <% }) %>
      </div>

      <div class="half_right">
        <h3>Rincian Order</h3>
        <h2>INVOICE Number : <%=invoice[0].id%></h2>

        <table border = 1>
          <tr>
            <th>No</th>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total Price</th>
          </tr>

            <% details.forEach((detail,i) =>{ %>
          <tr>
            <td><%= i+1 %></td>
            <td><%= detail.Product.name%></td>
            <td><%= detail.Product.price %></td>
            <td><%= detail.quantity %></td>
            <td><%= detail.totalPrice(detail.Product.price,detail.quantity)%></td>


          </tr>
            <% }) %>
            <%= JSON.stringify(details) %>



        </table>

      </div>

    </div>
  </body>
</html>
