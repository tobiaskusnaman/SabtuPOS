<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>List Product</title>
  </head>
  <body>
    <% include ./partials/navbar %>
    <%if(err){%>
      <p style="color:red;"><%=err%></p>

   <%}%>
   <div class="container">
     <div class="content">
       <br>

       <div class="box" style="width:350px">
         <h1>Add a new item</h1>
         <form action='/product/addProduct' method="POST">

           <div class="field">
             <div class="control">
               <input class="input" name="name" type="text"placeholder="Product name">
             </div>
           </div>

           <div class="field">
             <div class="control">
               <input class="input" name="stock" type="text" placeholder="Stock">
             </div>
           </div>

           <div class="field">
             <div class="control">
               <input class="input" name="price" type="text" placeholder="Price">
             </div>
           </div>

           <div class="field">
             <div class="control">
               <input class="input" name="description" type="text" placeholder="Description">
             </div>
           </div>

           <div class="field">
             <div class="control">
               <input class="input" name="imgSource" type="text" placeholder="Image source">
             </div>
           </div>
           <br>
           <input class="button is-info" type="submit" value="Submit">
         </form>
       </div>

       <br>

       <h1>List item</h1>

         <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
           <tr>
             <th>Id</th>
             <th>Name</th>
             <th>Stock</th>
             <th>Price</th>
             <th>Description</th>
             <th>Action</th>
           </tr>
           <% data.sort(function(a,b){
             return a.id -b.id
           }).forEach((row)=>{ %>
           <tr>
             <td><%= row.id %></td>
             <td><%= row.name %></td>
             <td><%= row.stock %></td>
             <td><%= row.price %></td>
             <td><%= row.description %></td>
             <td> <a class="button is-rounded" href="/product/listProduct/edit/<%=row.id%>"> Edit </a> |
              <a class="tag is-delete is-danger" href="/product/delete/<%=row.id%>/"></a></td>
           </tr>
           <% }) %>
         </table>
     </div>
   </div>
  </body>
</html>
